{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Django",
        "type": "python",
        "request": "attach",
        "clientOS": "windows",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/backend/",
            "remoteRoot": "/app/"
          }
        ],
        "windows": {
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}/backend/",
              "remoteRoot": "/app/"
            }
          ],
        },
        "port": 5000,
        "host": "0.0.0.0",
      },
      {
        "name": "Windows Debug Django",
        "type": "python",
        "request": "launch",
        "stopOnEntry": false,
        "python": "${workspaceRoot}/backend/.venv/Scripts/python.exe",
        "program": "${workspaceRoot}/backend/manage.py",
        "args": [
            "runserver",
            "--no-color",
            "--noreload"
        ],
        "debugOptions": [
            "WaitOnAbnormalExit",
            "WaitOnNormalExit",
            "RedirectOutput",
            "DjangoDebugging"
        ]
    }
    ]
  }